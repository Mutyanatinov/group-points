{
  "rules": {
    ".read": true,
  	"members": {
      "$uid": {
        ".write": "auth != null && auth.uid == $uid",
        "groups": {
      		"$groupId": {
      			".write": "root.child('members').child(auth.uid).child('groups').child($groupId).child('admin').val() == true"
      		}
    		}
      }
    },
		"groups": {
     ".write": "auth != null",
     "$groupId": {
        ".write": "root.child('members').child(auth.uid).child('groups').child($groupId).child('admin').val() == true",
        "members": {
          ".indexOn": ["admin", "points"],
      		"$uid": {
        		".write": "auth != null && auth.uid == $uid"
      		}
    		}
      }
    },
    "posts": {
      "$groupId": {
      	"$uid": {
        	".write": "root.child('members').child(auth.uid).child('groups').child($groupId).child('admin').val() == true"
      	}
    	}
    }
  }
}